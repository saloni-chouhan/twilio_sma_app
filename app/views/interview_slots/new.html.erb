<div class="container mt-5">
  <h3>Book Interview Slot</h3>

  <%= form_with url: interview_slots_path, method: :post do %>

    <!-- Date Picker -->
    <div class="mb-4">
      <label class="form-label">Select Date</label>
      <%= date_field_tag :date, @selected_date,
            class: "form-control",
            onchange: "this.form.submit()" %>
    </div>

    <!-- Time Slots -->
    <div class="mb-4">
      <label class="form-label">Available Time Slots</label>

      <% @time_slots.each do |time| %>
        <% datetime_value = "#{@selected_date} #{time}" %>

        <div class="form-check">
          <%= radio_button_tag :interview_at, datetime_value, false,
                class: "form-check-input" %>

          <%= label_tag nil, time,
                class: "form-check-label" %>
        </div>
      <% end %>
    </div>

    <%= submit_tag "Book Slot", class: "btn btn-primary" %>

  <% end %>
</div>
